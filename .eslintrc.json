// https://eslint.org/docs/rules/
{
  "extends": ["next/core-web-vitals", "eslint:recommended"],
  "globals": {
    "React": true,
    "JSX": true,
    "ScrollToOptions": true
  },
  "rules": {
    "array-callback-return": "error",
    "no-duplicate-imports": "error",
    "no-unreachable-loop": "error",
    "camelcase": "warn",
    "complexity": "error",
    "eqeqeq": "error",
    "max-depth": "error",
    "no-console": "warn",
    "no-else-return": "warn",
    "no-nested-ternary": "warn",
    "no-plusplus": "error",
    "no-redeclare": "error",
    "no-var": "error",
    "prefer-const": "error",
    "spaced-comment": "warn",
    "yoda": "error"
  }
}
